<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.screen.Day2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <View
                android:layout_height="4dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:layout_weight="3"
                android:layout_width="100dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Week 1"
                android:textAlignment="center"
                android:paddingHorizontal="10sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:gravity="center_horizontal" />
            <View
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="4dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:background="@color/colorAccent" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="17sp"
                    android:paddingLeft="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Perancangan dan pemeliharaan bagian rumah  dasar seperti ruang tamu, ruang makan, kamar tidur dan dapur yang masing-masing fun..."
                    android:textSize="15sp"
                    android:paddingHorizontal="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:text="Progress Proyek: "
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingHorizontal="75dp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">


                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:src="@drawable/duapersen"
                        android:layout_gravity="center_horizontal"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="50dp"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/grey"
                        >

                        <View
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="0dp"
                            android:layout_gravity="bottom"
                            android:background="@color/colorAccent"
                            />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="0dp"
                            android:layout_gravity="bottom"
                            android:background="#653D02"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 25%"
                            android:textStyle="bold"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:textColor="#000000"/>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Foto -"
                    android:textSize="17sp"
                    android:paddingTop="15dp"
                    android:paddingLeft="30dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/artikel1"
                                    android:scaleType="centerCrop"
                                    />
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="10dp"
                                    android:paddingHorizontal="5dp"
                                    android:text="perbaikan bagian atap"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="20dp"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/artikel4"
                                    android:scaleType="fitCenter"
                                    />
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="10dp"
                                    android:paddingHorizontal="5dp"
                                    android:text="perbaikan bagian teras"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/artikel2"
                                    android:scaleType="center"
                                    />
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="10dp"
                                    android:paddingHorizontal="5dp"
                                    android:text="perbagian bagian depan"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:text="Atap"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="15dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@color/brownbg"
                        />

                    <View
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorAccent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textStyle="bold"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="25dp"
                        android:textColor="#000000"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:text="Depan Rumah"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="15dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@color/brownbg"
                        />

                    <View
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorAccent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textStyle="bold"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="25dp"
                        android:textColor="#000000"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:text="Belakang Rumah"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="15dp">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@color/brownbg"
                        />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorAccent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20%"
                        android:textStyle="bold"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="25dp"
                        android:textColor="#000000"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:text="Ruang Makan Rumah"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="15dp">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@color/brownbg"
                        />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorAccent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20%"
                        android:textStyle="bold"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="25dp"
                        android:textColor="#000000"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>